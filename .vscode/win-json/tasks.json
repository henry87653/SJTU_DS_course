{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "\"${workspaceFolder}/exefile/${fileBasenameNoExtension}.exe\""
            ],
            "type": "shell"
        },
        {
            "label": "build-debug",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "\"${workspaceFolder}/exefile/${fileBasenameNoExtension}-debug.exe\""
            ],
            "type": "shell"
        }
    ]
}